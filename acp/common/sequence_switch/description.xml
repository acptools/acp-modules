<?xml version="1.0"?>
<component-type name="acp.common.sequence_switch">
	<description>Switch controlled by a timer sequence.</description>
	<view>
		<includes>
			<include>SequenceSwitch.h</include>
		</includes>
		<class>acp_common_sequence_switch::TSequenceSwitch</class>
		<constructor-args>
			<arg type="autogenerated">controller</arg>
		</constructor-args>		
	</view>
	<controller>
		<includes>
			<include>SequenceSwitch.h</include>
		</includes>
		<class>acp_common_sequence_switch::SequenceSwitchController</class>
		<constructor-args>
			<arg type="property">Pin</arg>
			<arg type="property">InvertedLogic</arg>
			<arg type="property">BaseDuration</arg>		
		</constructor-args>
		<init>
			<method>init</method>
			<arg type="property">Sequence1On</arg>
			<arg type="property">Sequence1Off</arg>
			<arg type="property">Sequence2On</arg>
			<arg type="property">Sequence2Off</arg>
		</init>
	</controller>
	<properties>
		<property>
			<name>Pin</name>
			<type>pin</type>
		</property>
		<property>
			<name>InvertedLogic</name>
			<type>bool</type>
			<value type="default">false</value>
		</property>		
		<property>
			<name>BaseDuration</name>
			<type min="1" max="255">byte</type>
			<value type="default">10</value>
		</property>
		<property>
			<name>Sequence1On</name>
			<type min="0" max="255">byte</type>
			<value type="default">1</value>
		</property>
		<property>
			<name>Sequence1Off</name>
			<type min="0" max="255">byte</type>
			<value type="default">1</value>
		</property>
		<property>
			<name>Sequence2On</name>
			<type min="0" max="255">byte</type>
			<value type="default">1</value>
		</property>		
		<property>
			<name>Sequence2Off</name>
			<type min="0" max="255">byte</type>
			<value type="default">1</value>
		</property>								
	</properties>
	<loopers>
		<looper>
			<method>looper</method>
			<id-binding type="attribute">looperId</id-binding>
		</looper>
	</loopers>
</component-type>
