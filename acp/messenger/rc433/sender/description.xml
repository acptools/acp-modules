<?xml version="1.0"?>
<component-type name="acp.messenger.rc433.sender">
	<description>RC 433 MHz sender</description>
	<dependencies>
		<module>acp.messenger.rc433.common</module>	
	</dependencies>
	<view>
		<includes>
			<include>Rc433Sender.h</include>
		</includes>
		<class>acp_messenger_rc433_sender::TRc433Sender</class>
		<constructor-args>
			<arg type="autogenerated">controller</arg>
		</constructor-args>
	</view>
	<controller>
		<includes>
			<include>Rc433Sender.h</include>
		</includes>
		<class>acp_messenger_rc433_sender::Rc433SenderController</class>
		<constructor-args>
			<arg type="property">Pin</arg>
			<arg type="property">Protocol</arg>
			<arg type="property">PulseLength</arg>
			<arg type="property">RepeatTransmit</arg>
		</constructor-args>
	</controller>
	<properties>
		<property>
			<name>Pin</name>
			<type>pin</type>
			<description>Data pin where receiver is connected.</description>
		</property>
		<property>
			<name>Protocol</name>
			<type>int</type>
		</property>
		<property>
			<name>PulseLength</name>
			<type>int</type>
		</property>
		<property>
			<name>RepeatTransmit</name>
			<type>int</type>
		</property>
	</properties>
</component-type>
