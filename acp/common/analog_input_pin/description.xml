<?xml version="1.0"?>
<component-type name="acp.common.analog_input_pin">
	<description>Simple analog input pin.</description>
	<view>
		<includes>
			<include>AnalogInputPin.h</include>
		</includes>
		<class>acp_common_aip::TAnalogInputPin</class>
		<constructor-args>
			<arg type="autogenerated">controller</arg>
		</constructor-args>
	</view>
	<controller>
		<includes>
			<include>AnalogInputPin.h</include>
		</includes>
		<class>acp_common_aip::AnalogInputPinController</class>
		<constructor-args>
			<arg type="property">Pin</arg>
		</constructor-args>
	</controller>
	<properties>
		<property>
			<name>Pin</name>
			<type>analog-pin</type>
			<description>The pin from which the value is read.</description>
		</property>
		<property>
			<name>ReadInterval</name>
			<type>unsigned long</type>
			<value type="default">1000</value>
			<description>Read interval in milliseconds.</description>
		</property>
	</properties>
	<events>
		<event>
			<name>OnValueChanged</name>
			<binding type="attribute">valueChangedEvent</binding>
			<description>When the value of the pin changed.</description>
		</event>	
	</events>
	<loopers>
		<looper>
			<method>readLooper</method>
			<interval>ReadInterval</interval>
		</looper>
	</loopers>	
</component-type>
