<?xml version="1.0"?>
<component-type name="acp.time.ds3232rtc">
	<description>DS3232 - RTC device with temperature-compensated crystal oscillator and SRAM.</description>
	<dependencies>
		<arduino-library>Wire</arduino-library>
	</dependencies>
	<view>
		<includes>
			<include>DS3232RTC.h</include>
		</includes>
		<class>acp_time_ds3232rtc::TDS3232Rtc</class>
		<constructor-args>
			<arg type="autogenerated">controller</arg>
		</constructor-args>
	</view>
	<controller>
		<includes>
			<include>DS3232RTC.h</include>
		</includes>
		<class>acp_time_ds3232rtc::DS3232Controller</class>
		<constructor-args>
			<arg type="property">SyncInterval</arg>
		</constructor-args>
		<init>
			<method>init</method>
		</init>
	</controller>
	<properties>
		<property>
			<name>SyncInterval</name>
			<type min="1" max="255">byte</type>
			<value type="default">5</value>
			<description>Synchronization interval in minutes for synchronizing computed time with time provided by the RTC device.</description>
		</property>
	</properties>
	<loopers>
		<looper>
			<method>updateLooper</method>
			<interval>500</interval>
		</looper>
	</loopers>	
</component-type>
