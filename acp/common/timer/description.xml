<?xml version="1.0"?>
<component-type name="acp.common.timer">
	<description>Simple timer with adjustable tick interval.</description>
	<view>
		<includes>
			<include>Timer.h</include>
		</includes>
		<class>acp_common_timer::TTimer</class>
		<constructor-args>
			<arg type="autogenerated">controller</arg>
		</constructor-args>		
	</view>
	<controller>
		<includes>
			<include>Timer.h</include>
		</includes>
		<class>acp_common_timer::TimerController</class>
		<init>
			<method>init</method>
			<arg type="property">Interval</arg>
			<arg type="property">Enabled</arg>
		</init>
	</controller>
	<properties>
		<property>
			<name>Interval</name>
			<type>unsigned long</type>
			<value type="default">1000</value>
		</property>	
		<property>
			<name>Enabled</name>
			<type>bool</type>
			<value type="default">true</value>
		</property>
		<property>
			<name>InitialDelay</name>
			<type>unsigned long</type>
			<value type="default">0</value>
		</property>		
	</properties>
	<events>
		<event>
			<name>OnTick</name>
			<binding type="attribute">tickEvent</binding>
			<description>Event triggered in given time period.</description>
		</event>	
	</events>
	<loopers>
		<looper>
			<method>looper</method>
			<id-binding type="attribute">looperId</id-binding>
			<initial-delay>InitialDelay</initial-delay>
		</looper>
	</loopers>
</component-type>
