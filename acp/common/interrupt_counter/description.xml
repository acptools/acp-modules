<?xml version="1.0"?>
<component-type name="acp.common.interrupt_counter">
	<description>Counter of interrupt occurences.</description>
	<view>
		<includes>
			<include>InterruptCounter.h</include>
		</includes>
		<class>acp_common_interrupt_counter::TInterruptCounter</class>
		<constructor-args>
			<arg type="autogenerated">controller</arg>
		</constructor-args>
	</view>
	<controller>
		<includes>
			<include>InterruptCounter.h</include>
		</includes>
		<class>acp_common_interrupt_counter::InterruptCounterController</class>
		<init>
			<method>init</method>
			<arg type="property">Interrupt</arg>
			<arg type="property">InterruptMode</arg>
			<arg type="autogenerated">interruptHandler</arg>
		</init>
	</controller>
	<properties>
		<property>
			<name>Interrupt</name>
			<type>interrupt</type>
			<description>The interrupt to be counted.</description>
		</property>
		<property>
			<name>InterruptMode</name>
			<type values="LOW CHANGE RISING FALLING">enumeration</type>
			<description>Interrupt mode.</description>
		</property>
		<property>
			<name>UpdateInterval</name>
			<type>unsigned long</type>
			<value type="default">1000</value>
			<description>Interval in milliseconds in which the value of counter is updated.</description>
		</property>
	</properties>
	<loopers>
		<looper>
			<method>updateLooper</method>
			<interval>UpdateInterval</interval>
		</looper>
	</loopers>	
	<method-wrappers>
		<wrapper autogenerated-property="interruptHandler">
			<method>handleInterrupt</method>
		</wrapper>
	</method-wrappers>
</component-type>
